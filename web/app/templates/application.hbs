<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h1 id="title">Gobbler</h1>
      <h2>Word Finder</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12 text-center">
      <form class="form-inline">
        <div class="form-group">
          {{input type="text" value=searchString class="form-control" size="30" placeholder="Available tiles. + for wildcard."}}
        </div>
        <div class="form-group">
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-default {{if isScrabble "active"}}" {{action "setMode" "scrabble"}}>Scrabble</button>
            <button type="button" class="btn btn-default {{if isWWF "active"}}" {{action "setMode" "wwf"}}>Words With Friends</button>
          </div>
        </div>
        <button class="btn btn-primary" disabled={{disableSearch}} {{action "search"}}>Search</button>
      </form>
    </div>
  </div>

  {{outlet}}
</div>
